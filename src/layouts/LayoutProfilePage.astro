---
export const prerender = true;

import { ViewTransitions } from "astro:transitions";

// import "~/styles/global.css";
interface Props {
  title: string;
}

import PostHog from "~/components/posthog.astro";
import SciComModel from "~/components/SciComModel";
import Yellow_heart_100px from "~/svgs/Yellow_heart_100px.svg";
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{Astro.props.title}</title>
    <ViewTransitions />
    <PostHog />
  </head>
  <body>
    <header>
      <nav
        class='flex justify-between flex-nowrap p-4 sm:py-6 sm:px-8 mx-auto max-w-6xl'
      >
        <img
          src={Yellow_heart_100px.src}
          alt='Yellow heart Lightup logo'
          class='sm:h-24 sm:w-24 h-16 w-16 z-10'
          width='40px'
          height='40px'
        />
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <SciComModel client:load />
  </body>
</html>
