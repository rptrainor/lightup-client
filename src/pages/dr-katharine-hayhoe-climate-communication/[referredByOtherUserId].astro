---
import SinglePage from "~/components/SinglePage.astro";
import Layout from "~/layouts/Layout.astro";

const session_id = Astro.url.searchParams.get('session_id')! || '';

const PROJECT = {
  id: "5",
  title:
    "Inspiring Action for Our Planet: Support Dr. Katharine Hayhoe's Climate Advocacy",
  description:
    "Dr. Katharine Hayhoe is not just a renowned climate scientist; she's a leading voice in climate communication. At Texas Tech University, her work transcends traditional research, focusing on bridging the gap between scientific knowledge and public understanding. By contributing to Dr. Hayhoe's initiatives, you're not just funding research; you're investing in a movement to educate, engage, and empower communities and decision-makers to take meaningful action against climate change.",
  header: "Empower Change with Science: Dr. Hayhoe's Climate Mission",
  slug: "dr-katharine-hayhoe-climate-communication",
  tags: ["Climate Advocacy", "Science Communication", "Sustainable Future"],
  banner: {
    src: "https://imagedelivery.net/xHZxKHrwCcaO8iTco-Njhg/ca071033-2393-445b-74f3-1bf804046200/public",
    alt: "Dr. Katharine Hayhoe engaging in climate communication",
  },
  creator: {
    name: "Dr. Hayhoe, Katharine",
    avatar: {
      src: "https://imagedelivery.net/xHZxKHrwCcaO8iTco-Njhg/58a8b4b7-5281-443a-f3bd-a79c506aaf00/avatar",
      alt: "Photo of Dr. Katharine Hayhoe, a champion in climate science communication",
    },
  },
  areas: [
    {
      header: "Effective Climate Communication:",
      body: "Dr. Hayhoe excels in making complex climate science accessible and relatable, helping people understand the urgency and relevance of climate change to their daily lives.",
    },
    {
      header: "Policy Influence and Public Engagement:",
      body: "Her work significantly impacts policy development and public discourse on climate action, making her efforts pivotal in shaping informed climate policies.",
    },
    {
      header: "Educational Initiatives:",
      body: "Dr. Hayhoe's focus on education aims to create a well-informed citizenry, equipped to make decisions and advocate for climate solutions.",
    },
  ],
  callToAction:
    "Your support for Dr. Katharine Hayhoe's work is a step towards a more informed and proactive society in the face of climate change. Help us amplify this crucial message and turn understanding into action. Donate today and join a community committed to making a real difference for our planet's future.",
};
---
<Layout
  title={PROJECT.title}
  image={PROJECT.banner.src}
  description={PROJECT.header}
>
  <SinglePage project={PROJECT} session_id={session_id} />
</Layout>