---
import SinglePage from "~/components/SinglePage.astro";
import Layout from "~/layouts/Layout.astro";

const session_id = Astro.url.searchParams.get('session_id')! || '';

const PROJECT = {
  id: "6",
  title:
    "Unlocking Hope: Support Dr. Feng Zhang's Quest to Cure Neurodegenerative Diseases",
  description:
    "Step into the future of medicine with Dr. Feng Zhang at the Broad Institute of MIT and Harvard. His groundbreaking work harnessing CRISPR technology is redefining our approach to neurodegenerative diseases like Alzheimer’s and Parkinson’s. By supporting Dr. Zhang, you're investing in innovative research that holds the key to unlocking new treatments, directly impacting millions of lives affected by these debilitating conditions.",
  header:
    "Join a Revolution in Medical Science: Dr. Zhang's Neurodegenerative Disease Research",
  slug: "dr-feng-zhang-neurodegenerative-research",
  tags: ["Neurodegenerative", "Alzheimer’s", "Parkinson’s"],
  banner: {
    src: "https://imagedelivery.net/xHZxKHrwCcaO8iTco-Njhg/d7bb9853-1f05-42f4-c85c-47157bbc0c00/public",
    alt: "Dr. Feng Zhang with his laboratory, pushing the boundaries of neurodegenerative disease research",
  },
  creator: {
    name: "Dr. Zhang, Feng",
    avatar: {
      src: "https://imagedelivery.net/xHZxKHrwCcaO8iTco-Njhg/7bd7ca17-f7c6-4324-41c2-b1409b6d1700/avatar",
      alt: "Portrait of Dr. Feng Zhang, a visionary in neurodegenerative disease research",
    },
  },
  areas: [
    {
      header: "Revolutionizing Disease Understanding:",
      body: "Dr. Zhang's innovative use of CRISPR in neurodegenerative diseases is paving the way for groundbreaking therapies, offering new hope in the battle against Alzheimer's and Parkinson's.",
    },
    {
      header: "Driving Towards Effective Treatments:",
      body: "His deep dive into the genetic underpinnings of these conditions is crucial for developing next-generation treatments, potentially changing the lives of those affected.",
    },
    {
      header: "Shaping the Future of Healthcare:",
      body: "The advancements from Dr. Zhang's lab could significantly alter the landscape of healthcare, setting the stage for more effective, targeted, and sustainable treatments for neurodegenerative diseases.",
    },
  ],
  callToAction:
    "Join us in supporting Dr. Zhang's pioneering research to transform our understanding and treatment of neurodegenerative diseases. Your donation is more than support; it's a beacon of hope for millions.",
};
---

<Layout
  title={PROJECT.title}
  image={PROJECT.banner.src}
  description={PROJECT.header}
>
  <SinglePage project={PROJECT} session_id={session_id} />
</Layout>