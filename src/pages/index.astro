---
import Layout from "~/layouts/Layout.astro";
import Lightup_logo_400px from "~/svgs/Lightup_logo_400px.svg";
---

<Layout title='Lightup'>
  <main
    style='
	display: flex;
	flex-direction: column;
	padding: 1rem;
	gap: 1rem;
	justify-content: center;
	margin: 0 auto;
	max-width: 1200px;
	'
  >
    <h1>A Catalyst for Academic Breakthroughs</h1>
    <div
      style='
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		margin: 0 auto;
		gap: 2rem;
		justify-content: space-evenly;
		'
    >
      <img src={Lightup_logo_400px.src} alt='image description' />
      <div
        style='
	max-width: 800px;
	display: flex;
	flex-direction: column;
	gap: 1rem;
	justify-content: center;
	'
      >
        <h2>Advancing Research</h2>
        <h2>Advancing Ideas</h2>
        <h2>Advancing Humanity</h2>
      </div>
    </div>
  </main>
</Layout>
<style>
  img {
    max-width: 250px;
    max-height: 250px;
    @media screen and (min-width: 500px) {
      max-width: 400px;
      max-height: 400px;
    }
  }
  h1 {
    font-size: 2.25rem;
    line-height: 1.25;
    color: #ffffff;
    overflow-wrap: break-word;
    text-align: center;
    @media screen and (min-width: 425px) {
      font-size: 3rem;
      line-height: 1.25;
    }
  }
  h2 {
    font-size: 2.25rem;
    line-height: 1;
    @media screen and (min-width: 425px) {
      font-size: 3rem;
      line-height: 1.25;
    }
  }
</style>
