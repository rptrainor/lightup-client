<style>
  img {
    width: 100%;
    max-width: 40px;
    height: auto;
  }
  h1 {
    font-size: 2.5rem;
    line-height: 1.25;
    color: #ffffff;
    overflow-wrap: break-word;
    text-align: center;
    @media screen and (min-width: 425px) {
      font-size: 3rem;
      line-height: 1.25;
    }
  }
  h2 {
    font-size: 1.5rem;
    line-height: 1;
    color: #ffda00;
    @media screen and (min-width: 425px) {
      font-size: 2rem;
      line-height: 1.25;
    }
  }
  h3 {
    font-size: 1.5rem;
    line-height: 1.5;
    color: #FFFFFF;
    @media screen and (min-width: 425px) {
      font-size: 2rem;
    }
  }
  .hero {
    margin: 1rem auto;
    display: flex;
    flex-direction: column;
    padding: 2.5rem 1rem;
    gap: 1rem;
    justify-content: center;
    @media screen and (min-width: 425px) {
      padding: 5.625rem 1rem;
    }
  }
  .featured-projects {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 0 auto 2rem 0.5rem;
    @media screen and (min-width: 425px) {
      gap: 2rem;
      margin: 0 auto 2rem 2rem;
    }
  }
	.row {
		display: flex;
		flex-direction: row;
		flex-wrap: nowrap;
		overflow-y: scroll;
		gap: 1rem;
	}
</style>
