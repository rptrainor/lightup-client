        <div class='col-span-4 lg:col-span-3 gap-4'>
          <h3 class='text-brand_white mx-4'>Happening on Lightup</h3>
          {PROJECTS.map((project) => <ProjectCard project={project} />)}
        </div>
        <!-- PROJECTS COLUMN - END -->

        <!-- DESKTOP ONLY INTERESTS COLUMN - START -->
        <div class='hidden lg:block h-[6000px]'>
          <div class='sticky top-12'>
            <h3 class='text-brand_white mx-4 sm:mx-0'>Interests</h3>
            <div class='flex gap-4 flex-wrap py-4'>
              {
                interests.map((interest) => (
                  <div class='relative'>
                    <div class='absolute bg-brand_pink w-full h-full translate-x-2 translate-y-2' />
