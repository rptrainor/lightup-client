---
import Layout from "~/layouts/Layout.astro";
import Yellow_heart_100px from "~/svgs/Yellow_heart_100px.svg";
---

<Layout title='Lightup'>
  <main
    style='
	display: flex;
	flex-direction: column;
	padding: 1rem;
	gap: 1rem;
	justify-content: center;
	margin: 0 auto;
	max-width: 1200px;
	'
  >
    <h1>A Catalyst for Academic Breakthroughs</h1>
    <div
      style='
	max-width: 800px;
	display: flex;
	flex-direction: column;
	gap: 1rem;
	justify-content: start;
	margin: 0 auto;
	align-items: baseline;
	'
    >
      <div
        style='display: flex; justify-content: center; flex-wrap: nowrap; gap: 1rem;'
      >
        <img src={Yellow_heart_100px.src} alt='image description' />
        <h2>Advancing Research</h2>
      </div>
      <div
        style='display: flex; justify-content: center; flex-wrap: nowrap; gap: 1rem;'
      >
        <img src={Yellow_heart_100px.src} alt='image description' />
        <h2>Advancing Ideas</h2>
      </div>
      <div
        style='display: flex; justify-content: center; flex-wrap: nowrap; gap: 1rem;'
      >
        <img src={Yellow_heart_100px.src} alt='image description' />
        <h2>Advancing Humanity</h2>
      </div>
    </div>
  </main>
</Layout>
<style>
  img {
    width: 100%;
    max-width: 40px;
    height: auto;
  }
  h1 {
    font-size: 2.25rem;
    line-height: 1.25;
    color: #ffffff;
    overflow-wrap: break-word;
    text-align: center;
    @media screen and (min-width: 425px) {
      font-size: 3rem;
      line-height: 1.25;
    }
  }
  h2 {
    font-size: 2.25rem;
    line-height: 1;
    @media screen and (min-width: 425px) {
      font-size: 3rem;
      line-height: 1.25;
    }
  }
</style>
