---

<Layout title='Lightup'>
  <div class='flex flex-col justify-center sm:gap-8 gap-4'>
    <!-- HERO SECTION -->
    <div class='flex flex-col gap-4 mt-10 sm:mt-20'>
      <div class='flex flex-col gap-0 uppercase'>
        <h1>A community that empowers science</h1>
        <h1>to change the world</h1>
      </div>
      <div class='max-w-6xl flex flex-col gap-4 mx-auto items-baseline'>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow'>Advancing Research</h2>
        </div>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow'>Advancing Ideas</h2>
        </div>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow'>Advancing Humanity</h2>
        </div>
      </div>
    </div>

    <!-- DESKTOP ONLY FEATURED BANNER - START -->
    <DesktopOnlyFeaturedBanner />
    <!-- DESKTOP ONLY FEATURED BANNER - END -->

    <!-- MOBILE AND TABLET ONLY INTERESTS HORIZONTAL CAROUSEL - START -->
    <div class='container block lg:hidden'>
      <h3 class='text-brand_white mx-4 sm:mx-0 pl-4'>Interests</h3>
      <div class='flex overflow-x-scroll scrolling-touch -ml-4 pl-8 gap-8'>
        {
          interests.map((interest) => (
            <div class='relative h-24'>
              <div class='absolute bg-brand_pink w-full h-full -translate-x-2 -translate-y-2' />
              <button class='relative flex items-center justify-center p-2 border-brand_pink bg-brand_white w-full border-4 z-10 h-full'>
                <p class='text-brand_pink uppercase text-center truncate'>
                  {interest}
                </p>
              </button>
            </div>
          ))
        }
      </div>
    </div>
    <!-- MOBILE AND TABLET ONLY INTERESTS HORIZONTAL CAROUSEL - END -->

    <!-- RECENT PROJECTS - START -->
    <div class='my-4 flex flex-col gap-4 mx-auto'>
      <div class='grid grid-cols-4 gap-4 w-full max-w-5xl mx-auto'>
