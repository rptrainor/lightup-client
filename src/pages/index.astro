---

<Layout>
  <div class='flex flex-col justify-center sm:gap-8 gap-4'>
    <!-- HERO SECTION -->
    <div class='flex flex-col gap-4 mt-10 sm:mt-20 px-4 mb-20'>
      <div class='flex flex-col gap-0 uppercase'>
        <h1 class="font-black">A community that empowers science</h1>
        <h1 class="font-black">to change the world</h1>
      </div>
      <div class='max-w-6xl flex flex-col gap-4 mx-auto items-baseline'>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow p-0 font-black'>Advancing Research</h2>
        </div>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow p-0 font-black'>Advancing Ideas</h2>
        </div>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow p-0 font-black'>Advancing Humanity</h2>
        </div>
      </div>
    </div>

    <!-- DESKTOP ONLY FEATURED BANNER - START -->
    <DesktopOnlyFeaturedBanner />
    <!-- DESKTOP ONLY FEATURED BANNER - END -->

    <!-- MOBILE AND TABLET ONLY INTERESTS HORIZONTAL CAROUSEL - START -->
    <div class='block xl:hidden'>
      <h3 class='text-brand_white mx-4 sm:mx-0 pl-4'>Interests</h3>
      <div class='flex overflow-x-scroll scrolling-touch gap-8 pt-4 pr-4 pl-6'>
        {
          INTERESTS.map((interest) => (
            <a data-astro-prefetch href={`/${interest.slug}`}>
              <div class='relative h-24'>
                <div class='absolute bg-brand_pink w-full h-full -translate-x-2 -translate-y-2' />
                <div class='relative flex items-center justify-center p-2 border-brand_pink bg-brand_white w-full border-4 z-10 h-full'>
                  <p class='text-brand_pink uppercase text-center truncate'>
                    {interest.name}
                  </p>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
    <!-- MOBILE AND TABLET ONLY INTERESTS HORIZONTAL CAROUSEL - END -->

    <!-- RECENT PROJECTS - START -->
    <div class='my-4 flex flex-col gap-4 mx-auto'>
      <div class='grid grid-cols-4 gap-4 w-full max-w-6xl mx-auto'>
        <!-- PROJECTS COLUMN - START -->
        <div class='col-span-4 xl:col-span-3 gap-4'>
          <h3 class='text-brand_white mx-4'>Happening on Lightup</h3>
          {PROJECTS.map((project) => <ProjectCard project={project} />)}
        </div>
        <!-- PROJECTS COLUMN - END -->
        <!-- DESKTOP ONLY INTERESTS COLUMN - START -->
        <div class='hidden xl:block h-[6000px]'>
          <div class='overflow-y-scroll'>
            <h3 class='text-brand_white mx-4 sm:mx-0'>Interests</h3>
            <div class='flex gap-4 flex-wrap py-4'>
              {
                INTERESTS.map((interest) => (
                  <a data-astro-prefetch href={`/${interest.slug}`}>
                    <div class='relative'>
                      <div class='absolute bg-brand_pink w-full h-full translate-x-2 translate-y-2' />
                      <div class='relative p-2 border-brand_pink bg-brand_white w-full border-4 z-10'>
                        <p class='text-brand_pink uppercase text-center'>
                          {interest.name}
                        </p>
                      </div>
                    </div>
                  </a>
                ))
              }
            </div>
          </div>
        </div>
        <!-- DESKTOP ONLY INTERESTS COLUMN - END -->
      </div>
    </div>
    <!-- RECENT PROJECTS - END -->
  </div>
</Layout>
