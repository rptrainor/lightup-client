<Layout title='Lightup'>
  <div class='flex flex-col justify-center sm:gap-8 gap-4'>
    <!-- HERO SECTION -->
    <div class='flex flex-col gap-4 mt-10 sm:mt-20'>
      <div class='flex flex-col gap-0 uppercase'>
        <h1>A community that empowers science</h1>
        <h1>to change the world</h1>
      </div>
      <div class='max-w-6xl flex flex-col gap-4 mx-auto items-baseline'>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow'>Advancing Research</h2>
        </div>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow'>Advancing Ideas</h2>
        </div>
        <div
          class='flex justify-center items-center flex-nowrap sm:gap-4 gap-1'
        >
          <img
            src={Yellow_heart_100px.src}
            alt='Yellow heart Lightup logo'
            class='h-10 w-10'
            width='40px'
            height='40px'
          />
          <h2 class='text-brand_yellow'>Advancing Humanity</h2>
        </div>
      </div>
    </div>
    <!-- FEATURED BANNER -->
    <section class='hidden lg:flex flex-nowrap max-w-5xl mx-auto gap-4'>
      <div class='relative'>
        <h2
          class='py-2 px-4 bg-brand_pink text-4xl text-brand_white font-brand_white absolute -translate-x-8 -translate-y-8 h-fit w-max'
        >
          Today's win
        </h2>
      </div>
      <img
        src={FEATURED_PROJECT.banner.src}
        alt={FEATURED_PROJECT.banner.alt}
        loading='eager'
      />
      <div>
        <div class='flex flex-col gap-4 p-4'>
          <h1
            class='pointer-events-none mt-2 block font-black text-brand_white text-start'
          >
            {FEATURED_PROJECT.title}
          </h1>
          <blockquote>
            <p class='pointer-events-none text-sm text-brand_white'>
              {FEATURED_PROJECT.description}
            </p>
          </blockquote>
          <div class='flex gap-2'>
            <img
              src={FEATURED_PROJECT.creator.avatar.src}
              alt={FEATURED_PROJECT.creator.avatar.alt}
              loading='lazy'
              class='pointer-events-none object-cover group-hover:opacity-75 rounded-full w-10 h-10'
            />
            <p
              class='pointer-events-none block text-xl font-black text-brand_white'
            >
              {FEATURED_PROJECT.creator.name}
            </p>
          </div>
        </div>
        <button class='bg-brand_pink py-2 px-6 text-brand_white w-full mt-2'>
          <h1>Learn more</h1>
        </button>
      </div>
    </section>
    <!-- RECENT PROJECTS -->
    <div class='my-4 flex flex-col gap-4 mx-auto'>
      <div class='grid grid-cols-4 gap-4 w-full max-w-5xl mx-auto'>
        <!-- PROJECTS COLUMN -->
        <div class='col-span-4 lg:col-span-3 gap-8'>
          <h3 class='text-brand_white mx-4 sm:mx-0'>Happening on Lightup</h3>
          {PROJECTS.map((project) => <ProjectCard project={project} />)}
        </div>
        <!-- INTERESTS COLUMN -->
        <div class='hidden lg:block h-[3000px]'>
          <div class='sticky top-12'>
            <h3 class='text-brand_white mx-4 sm:mx-0'>Interests</h3>
            <div class='flex gap-4 flex-wrap my-8 lg:my-12'>
              {
                interests.map((interest) => (
                  <div class='relative'>
                    <div class='absolute bg-brand_pink w-full h-full translate-x-2 translate-y-2' />
                    <button class='relative p-2 border-brand_pink bg-brand_white w-full border-4 z-10'>
                      <p class='text-brand_pink uppercase text-center'>
                        {interest}
                      </p>
                    </button>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
