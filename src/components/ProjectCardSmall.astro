---
export const prerender = true;

interface Props {
  project: {
    title: string;
    banner: {
      src: string;
      alt: string;
    };
    creator: {
      name: string;
      avatar: {
        src: string;
        alt: string;
      };
    };
  };
}

const { project } = Astro.props;
---

<li class='relative'>
  <div
    class='group aspect-h-7 aspect-w-10 block w-full overflow-hidden sm:rounded-lg bg-brand_white focus-within:ring-2 focus-within:ring-brand_pink focus-within:ring-offset-2 focus-within:ring-offset-brand_pink'
  >
    <img
      src={project.banner.src}
      alt={project.banner.alt}
      class='pointer-events-none object-cover group-hover:opacity-75 w-full'
      loading='lazy'
    />
    <button type='button' class='absolute inset-0 focus:outline-none'>
      <span class='sr-only'>{`View details  ${project.title}`}</span>
    </button>
  </div>
  <div class='flex gap-2 items-start justify-start'>
    <img
      src={project.creator.avatar.src}
      alt={project.creator.avatar.alt}
      loading='lazy'
      class='pointer-events-none object-cover group-hover:opacity-75 rounded-full w-10 h-10 mt-4 ml-2'
    />
    <div class='flex flex-col gap-1'>
      <p
        class='pointer-events-none mt-2 block text-lg font-bold text-brand_black'
      >
        {project.title}
      </p>
      <p class='pointer-events-none block text-sm font-medium text-brand_black'>
        {project.creator.name}
      </p>
    </div>
  </div>
</li>
