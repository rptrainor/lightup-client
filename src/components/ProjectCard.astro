---
export const prerender = true;

interface Props {
  title: string;
  bannerSrc: string;
  bannerAlt: string;
}

const { title, bannerSrc, bannerAlt } = Astro.props;
---

<div class='thumbnail'>
  <div class='image-container'>
    <img src={bannerSrc} alt={bannerAlt} class='landscape' loading='lazy' />
  </div>
  <h3 style='padding: 1rem; font-size: 2rem;'>{title}</h3>
</div>
<style>
  .thumbnail {
    aspect-ratio: 9 / 16;
    max-width: 80vw;
  }

  .image-container {
    width: 100%;
    padding-top: 56.25%; /* 16:9 Aspect Ratio */
    position: relative;
  }

  .landscape {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .card {
    background: #ffffff;
    text-align: center;
    aspect-ratio: 9/16;
    max-width: fit-content;
    max-height: 700px;
  }
</style>
